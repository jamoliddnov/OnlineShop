@using OnlineShop.Service.ViewModels
@model List<AnnouncementViewModel>
@{
	Layout = "../Home/Index.cshtml";
}

<div class="row g-10 row row-cols-1 row-cols-md-2" style="display: flex;justify-content:center; margin:-80px 32px 32px 32px">

	<div class="products sale">
		<div class="products_body">
			@{
				foreach (var product in Model)
		        {
					<div class="product_item mb-2 "  style="margin: 15px 0px 0px 0px; height:420px;  border-radius:5px;">
                        <div class="product_image">
                            <a asp-controller="announcement" asp-action="announcementId" asp-route-productId="@product.Id">
                                <img src="~/@product.ImagePath" width="100%"; height="240px" alt="product" style="border-radius:5px;">
                            </a>
                        </div>
                        <div class="product_name">
                            <a href="#">@product.Title</a>
                        </div>
                        <div class="product_name">
                            <div class="product_name" style="font-size:15px; color:cadetblue; margin-top:-10px">@product.CreateAt</div>
                            <div class="old_price">
                            </div>
                        </div>
                        <div class="product_action">
                            <div class="product_cart">
                                <div class="product_price" style="margin-top:20px">@product.Price so'm</div>
                            </div>
                        </div>
                    </div>
				}
			}
		</div>
	</div>
</div>
