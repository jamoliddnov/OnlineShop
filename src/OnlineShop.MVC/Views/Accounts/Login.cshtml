@using OnlineShop.Service.Dtos.Accounts

@model AccountLoginDto
@{
    Layout = "_AccountLayout.cshtml";
}





    <!--Stylesheet-->
    <style media="screen">
        *,
        *:before,
        *:after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background-color: whitesmoke;
        }

        .background {
            width: 430px;
            width: 430px;
            height: 520px;
            position: absolute;
            transform: translate(-50%,-50%);
            left: 50%;
            top: 50%;
        }

            .background .shape {
                height: 200px;
                width: 200px;
                position: absolute;
                border-radius: 50%;
            }


        form {
            height: 470px;
            width: 400px;
            background-color: rgba(255,255,255,0.13);
            position: absolute;
            transform: translate(-50%,-50%);
            top: 50%;
            left: 50%;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.1);
            box-shadow: 0 0 40px rgba(8,7,16,0.6);
            padding: 50px 35px;
        }

            form * {
                font-family: 'Poppins',sans-serif;
                color: gray;
                letter-spacing: 0.5px;
                outline: none;
                border: none;
            }

            form h4 {
                font-size: 32px;
                font-weight: 500;
                line-height: 42px;
                text-align: center;
            }

        label {
            display: block;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 500;
        }

        input {
            display: block;
            height: 35px;
            width: 100%;
            background-color: white;
            border-radius: 4px;
            padding: 0 10px;
            margin-top: 8px;
            font-size: 13px;
            font-weight: 200;
        }

        ::placeholder {
            color: gray;
        }

        button {
            margin-top: 20px;
            width: 100%;
            height: 35px;
            background-color: wheat;
            color: gray;
            font-size: 13px;
            text-align:center;
            border-radius: 5px;
            cursor: pointer;
        }



    </style>
<div>
    <form asp-controller="accounts" asp-action="login" method="post">
        <h4>Shaxsiy akkount</h4>

        <label for="username" class="required form-label">Email</label>
        <input type="text" placeholder="Email" asp-for="Email">

        <label for="password" class="required form-label">Password</label>
        <input type="password" placeholder="Password" asp-for="Password">

        <div class="mt-8" >
            <input type="submit"  class="btn btn-success" style="width:100%; background-color:aqua; margin-top:40px;" value="Kirish" />
        </div>
        <button class="btn btn-primary" asp-controller="accounts" asp-action="register">Ro'yhatdan o'tish</button>
    </form>
</div>
