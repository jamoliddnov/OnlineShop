@using OnlineShop.Service.Dtos.Announcement
@model CreateAnnouncementDto

@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="header_middle">
    <div class="container">
        <div class="header_logo" style="margin-left: -13%">
            <a href="#">
                <img src="~/images/logo.png" alt="logo">
            </a>
        </div>
    </div>
</div>
<div class="header_bottom" style="margin-left: -13%">
    <div class="container">
        <nav class="main_nav">
            <ul style="height: 10px">
                <li><a asp-controller="user" asp-action="active2" asp-route-number="1" asp-route-page="1" class="active"> Faol E'lonlar </a></li>
                <li><a asp-controller="user" asp-action="active2" asp-route-number="2" asp-route-page="1">Tasdiqlanmagan e'lonlar</a></li>
                <li><a asp-controller="user" asp-action="addpost" asp-route-page="1">E'lon yaratish</a></li>
            </ul>
        </nav>
    </div>
</div>

<link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="../css/main.css">
<div class="wrapper container" style="margin-top: 50px">
    <form asp-controller="user" enctype="multipart/form-data" asp-action="addpostblock" method="post">
        @{
                <h4>E'lon yarating</h4>
            <div class="contact container" style="border-radius:8px; background:#F6F5F3">
                <h5 class="mt-3">Reklamangiz haqida bizga xabar bering</h5>
                <div class="addabout container" style="background:#F6F5F3">
                        <input type="text" asp-for="Title" class="form-control mt-5 " placeholder="Reklama nomi">
                        <select style="" class="form-select mt-4"  asp-for="Categorie">
                            <option> Kategoriya</option>
                            <option value="1">Hayvonlar</option>
                            <option value="2">Elektronika</option>
                            <option value="3">Kiyim-kechak</option>
                            <option value="4">Uy</option>
                            <option value="5">Avtomabil</option>
                            <option value="6">Bolalar uchun</option>
                        </select>
                    </div>
                </div>
            <div class="addphoto container " style="background:#F6F5F3">
                <div class="addimage-wrapper d-flex gap-5 ms-5 mt-5">
                    <img src="../img/addpost.svg" style="width:250px" class="add-img" id="addimg">
                </div>
                <input type="file" asp-for="Image" accept="image/png, image/jpg">
            </div>
            <div class="addabout container"style="background:#F6F5F3">
                <h5 class="pb-4 pt-2">Reklamangiz haqida ma'lumot bering*</h5>
                <input type="text" asp-for="Description" class="about-input">
            </div>
            <div class="contact container" style="border-radius:8px; background:#F6F5F3">
                <h5 class="pt-2">Ma'lumot</h5>
                <p class="mt-4">Narx</p>
                <input type="text" asp-for="Price" class="form-control">
                <p class="mt-4">Telefon raqam</p>
                <input type="text" asp-for="PhoneNumber" class="form-control " >
            </div>
            <input type="submit" class="btn btn-success" style="width:100%; margin-top:30px" value="Ro'yxatdan o'tish" />
        }
    </form>                                 
</div>

<div class="container">
    <section class="products">
        <div class="products_block">
        </div>
    </section>
</div>
<main>
    <section class="advantages" style="margin: 40px 0px -70px 0px">
        <div class="container">
            <div class="advantages_block">

                <div class="advatages_item">
                    <div class="advatntage_images">
                        <img src="~/images/adv_icon.png" alt="advantage_item">
                    </div>
                    <div class="advantage_name">Assartiment</div>
                    <div class="advantage_description">
                        Har doim stokda 22 000 dan ortiq<br>mahsulotlar turi<br> mavjud
                    </div>
                </div>

                <div class="advatages_item">
                    <div class="advatntage_images">
                        <img src="~/images/adv_icon.png" alt="advantage_item">
                    </div>
                    <div class="advantage_name">Sifat</div>
                    <div class="advantage_description">
                        Ko'p darajali boshqaruv tizimi<br> standartga muvofiq sifat<br>
                        <span>ISO9001</span>
                    </div>
                </div>

                <div class="advatages_item">
                    <div class="advatntage_images">
                        <img src="~/images/adv_icon.png" alt="advantage_item">
                    </div>
                    <div class="advantage_name">Yetkazib berish</div>
                    <div class="advantage_description">
                        Biz barcha mahsulotlaringizni<br> 2 soat ichida yoki istalgan qulay vaqtda<br> yetkazib beramiz!
                    </div>
                </div>

                <div class="advatages_item">
                    <div class="advatntage_images">
                        <img src="~/images/adv_icon.png" alt="advantage_item">
                    </div>
                    <div class="advantage_name">Sotib olish qaytariladi</div>
                    <div class="advantage_description">
                        Qolgan ortiqcha yoki sizni qoniqtirmagan<br> mahsulotingiz bormi? 120 kun ichida <br> <span>bizga qaytaring!</span>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
