@using OnlineShop.Service.Services.Common.PaginationServices
@using OnlineShop.Service.ViewModels
@model PageList<AnnouncementViewModel>
@{
    Layout = "_CustomerLayout.cshtml";
}
<div class="row g-10 row row-cols-1 row-cols-md-2" style="display: flex;justify-content:center; margin: 30px 30px 0 30px">

	@{
		if (Model.Count < 6)
		{
			<div class="products sale" style="height: 1000px">
				<div class="products_body">
					@{
						foreach (var product in Model)
						{
							<div class="product_item mb-2 " style="margin-bottom: 25px; height:420px; border-radius:5px;">
								<div class="product_image">
									<a asp-controller="user" asp-action="idPost" asp-route-productId="@product.Id">
										<img src="~/@product.ImagePath" width="100%" height="240" alt="product">
									</a>
								</div>
								<div class="product_name">
									<a href="#">@product.Description</a>
								</div>
								<div class="product_price" style="margin-top:40px;">
									<div class="new_price">@product.Price so'm</div>
									<div class="old_price">
									</div>
								</div>
								<div class="product_action">
									<div class="product_cart">
										<div class="count_buttons">

										</div>
									</div>
								</div>
							</div>
						}
					}
				</div>
			</div>
		}
		else
		{
			<div class="products sale">
				<div class="products_body">
					@{
						foreach (var product in Model)
						{
							<div class="product_item mb-2 " style="margin-bottom: 25px; height:420px; border-radius:5px;">
								<div class="product_image">
									<a asp-controller="user" asp-action="updatePost" asp-route-productId="@product.Id">
										<img src="~/@product.ImagePath" width="100%" height="240" alt="product">
									</a>
								</div>
								<div class="product_name">
									<a href="#">@product.Description</a>
								</div>
								<div class="product_price" style="margin-top:40px;">
									<div class="new_price">@product.Price so'm</div>
									<div class="old_price">
									</div>
								</div>
								<div class="product_action">
									<div class="product_cart">
										<div class="count_buttons">
										</div>
									</div>
								</div>
							</div>
						}
					}
				</div>
			</div>
		}
	}
	<div class="container">
		<section class="products">
			<div class="products_block">
				<div class="pagination">
					<nav>
						<ul>
							@{
								if (Model.MetaData.CurrentPage == 1)
								{
									<li class="active"><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="1">1</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="2">2</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="3">3</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="4">4</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="5">5</a></li>
								}
								else if (Model.MetaData.CurrentPage == 2)
								{
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="1">1</a></li>
									<li class="active"><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="2">2</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="3">3</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="4">4</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="5">5</a></li>
								}
								else if (Model.MetaData.CurrentPage == 3)
								{
									<li ><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="1">1</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="2">2</a></li>
									<li class="active"><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="3">3</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="4">4</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="5">5</a></li>
								}
								else if (Model.MetaData.CurrentPage == 4)
								{
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="1">1</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="2">2</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="3">3</a></li>
									<li class="active"><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="4">4</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="5">5</a></li>
								}
								else if (Model.MetaData.CurrentPage == 5)
								{
									<li ><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="1">1</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="2">2</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="3">3</a></li>
									<li><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="4">4</a></li>
									<li class="active"><a style="position: relative;" asp-controller="user" asp-action="active2" asp-route-number="@GlobalVariables.CategoryId" asp-route-page="5">5</a></li>
								}
							}
						</ul>
					</nav>
				</div>
			</div>
		</section>
	</div>
</div>

