@using OnlineShop.Service.ViewModels
@model CustomerAnnouncementViewModel;
@{
    Layout = "_CustomerLayout.cshtml";
}
<link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="../css/main.css">
<div class="wrapper container">
    <form asp-controller="user" enctype="multipart/form-data" asp-action="updatePostBlock"  method="post">
        @{
            GlobalVariables.UpdateId = int.Parse(@Model.Id.ToString());
            <h4>E'lonni o'zgartiring</h4>
            <div class="contact container" style="border-radius:8px; background:#F6F5F3">
                <h5 class="mt-3">Reklamangiz haqida</h5>
                <div class="addabout container" style="background:#F6F5F3">
                    <input type="text" asp-for="Title" class="form-control mt-5 " placeholder="@Model.Title">
                    <select style="" class="form-select mt-4" asp-for="Category">
                        <option>@Model.Category</option>
                        <option value="1">Hayvonlar</option>
                        <option value="2">Elektronika</option>
                        <option value="3">Kiyim-kechak</option>
                        <option value="4">Uy</option>
                        <option value="5">Avtomabil</option>
                        <option value="6">Bolalar uchun</option>
                    </select>
                </div>
            </div>
            <div class="addphoto container " style="background:#F6F5F3">
                <div class="addimage-wrapper d-flex gap-5 ms-5 mt-5">
                    <img src="~/@Model.ImagePath" style="width:140%; height:380px; margin-left: 80px" class="add-img" id="addimg">
                </div>
                <input type="file" asp-for="@Model.Image" accept="image/png, image/jpg" style="margin-top:30px">
            </div>
            <div class="addabout container" style="background:#F6F5F3">
                <h5 class="pb-4 pt-2">Reklamangiz haqida ma'lumot bering*</h5>
                <input placeholder="@Model.Description" type="text" asp-for="Description" class="about-input">
            </div>
            <div class="contact container" style="border-radius:8px; background:#F6F5F3">
                <h5 class="pt-2">Ma'lumot</h5>
                <p class="mt-4">Narx</p>
                <input placeholder="@Model.Price" type="text" asp-for="Price" class="form-control">
                <p class="mt-4">Telefon raqam</p>
                <input placeholder="@Model.PhoneNumber" type="text" asp-for="PhoneNumber" class="form-control ">
            </div>
            <input type="submit" class="btn btn-success" style="width:100%; margin-top:30px" value="E'lonni  o'zgartirish" />
        }
    </form>
</div>


