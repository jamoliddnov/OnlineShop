@using OnlineShop.Service.ViewModels
@model List<AnnouncementViewModel>
@{
    Layout = "_UserLayout.cshtml";
}
<div class="row g-10 row row-cols-1 row-cols-md-2" style="display: flex;justify-content:center; margin: 30px 30px 0 30px">

	<div class="products sale">
		<div class="products_body">
			@{
				foreach (var product in Model)
				{
					<div class="product_item mb-2 " style="margin-bottom: 25px; height:350px; width:276px; border-radius:5px;">
							<div class="product_image">
							<img src="~/@product.ImagePath" width="100%" height="180" alt="product">
							</div>
							<div class="product_name">
								<a href="#">@product.Description</a>
							</div>
							<div class="product_price" style="margin-top:40px;">
								<div class="new_price">@product.Price so'm</div>
								<div class="old_price">
								</div>
							</div>
							<div class="product_action">
								<div class="product_cart">
									<div class="count_buttons">
							
									</div>
								</div>
							</div>
						</div>
				}
			}
		</div>
	</div>
</div>