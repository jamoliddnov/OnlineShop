@using OnlineShop.Service.Dtos.Announcement
@model CreateAnnouncementDto
@{
    Layout = "_UserLayout.cshtml";
}
<link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="../css/main.css">
<div class="wrapper container">
    <form asp-controller="user" enctype="multipart/form-data" asp-action="addpostblock" method="post">
            <h4>E'lon yarating</h4>
            <div class="contact container" style="border-radius:8px">
                <h5 class="mt-3">Tell us about your advertisement</h5>
                <div class="addabout container">
                    <input type="text" asp-for="Title" class="form-control mt-5 " placeholder="Enter a title">
                    <select style="" class="form-select mt-4"  asp-for="Categorie">
                        <option>Select category</option>
                        <option value="1">Hayvonlar</option>
                        <option value="2">Elektronika</option>
                        <option value="3">Kiyim-kechak</option>
                        <option value="4">Uy</option>
                        <option value="5">Avtomabil</option>
                        <option value="6">Bolalar uchun</option>
                    </select>
                </div>
            </div>
        <div class="addphoto container ">
            <div class="addimage-wrapper d-flex gap-5 ms-5 mt-5">
                <img src="../img/addpost.svg" width="250px" class="add-img" id="addimg">
            </div>
            <input type="file" asp-for="Image" accept="image/png, image/jpg">
        </div>
        <div class="addabout container">
            <h5 class="pb-4 pt-2">Write about your advertisement*</h5>
            <input type="text" asp-for="Description" placeholder="Write here" class="about-input">
        </div>
        <div class="contact container" style="border-radius:8px">
            <h5 class="pt-2">Information</h5>
            <p class="mt-4">Price</p>
            <input type="text" asp-for="Price" class="form-control" placeholder="Write your price">
            <p class="mt-4">Your number</p>
            <input type="text" asp-for="PhoneNumber" class="form-control " placeholder="Write your number">
        </div>
        <input type="submit" class="btn btn-success" style="width:100%;" value="Ro'yxatdan o'tish" />
    </form>                                 
</div>
